# Attention Detection AI Processor Configuration

# General
ATTENTION_DEBUG=false
ATTENTION_LOG_LEVEL=INFO

# Face Detection
ATTENTION_FACE_DETECTION__MODEL_PATH=yolov8n-face.pt
ATTENTION_FACE_DETECTION__CONF_THRESHOLD=0.5
ATTENTION_FACE_DETECTION__DEVICE=cuda

# Tracker
ATTENTION_TRACKER__TRACK_BUFFER=30
ATTENTION_TRACKER__MATCH_THRESH=0.8

# Landmark
ATTENTION_LANDMARK__MAX_NUM_FACES=20
ATTENTION_LANDMARK__REFINE_LANDMARKS=true

# Attention
ATTENTION_ATTENTION__GAZE_WEIGHT=0.35
ATTENTION_ATTENTION__HEAD_POSE_WEIGHT=0.30
ATTENTION_ATTENTION__EYE_OPENNESS_WEIGHT=0.20
ATTENTION_ATTENTION__PRESENCE_WEIGHT=0.15

# Thresholds
ATTENTION_ATTENTION__HEAD_YAW_THRESHOLD=30.0
ATTENTION_ATTENTION__HEAD_PITCH_THRESHOLD=25.0
ATTENTION_ATTENTION__NOT_ATTENTIVE_SCORE=0.3
ATTENTION_ATTENTION__NOT_ATTENTIVE_DURATION=10.0

# Redis
ATTENTION_REDIS__HOST=localhost
ATTENTION_REDIS__PORT=6379
ATTENTION_REDIS__DB=0

